mixin include-style(name)
	<!--Asset::getInstance()->addCss(SITE_TEMPLATE_PATH . "/components-template/#{name}/style.css");-->
	-
		isInComponentsList(componentsList, name);
mixin include-style-mod(name, modName)
	<!--Asset::getInstance()->addCss(SITE_TEMPLATE_PATH . "/components-template/#{name}/#{modName}.css");-->
	-
		isInComponentsModList(componentsModList, name, modName);
mixin include-script(name, ignore)
	if (!ignore)
		<!--Asset::getInstance()->addJs(SITE_TEMPLATE_PATH . "/components-template/#{name}/script.min.js");-->
	-
		isInComponentsList(componentsScriptsList, name);

mixin include-script-vendor(name)
	<!--Asset::getInstance()->addJs(SITE_TEMPLATE_PATH . "/js/vendor/#{name}");-->
	-
		isInComponentsList(vendorScriptsList, name);
